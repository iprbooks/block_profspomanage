                            <label for="user-pass">Пароль</label>
                            <input type="password" class="form-control" id="user-pass">
                        </div>
                        <div class="form-group col-md">
                            <label for="user-type">Тип пользователя</label>
                            <select class="form-control" id="user-type">
                                <option value="2">Обучающийся</option>
                                <option value="5">Преподаватель</option>
                            </select>
                        </div>
                        <div class="form-group col-md">
                            <a id="profspomanage-user-register" class="btn btn-secondary" href="#register">Зарегистрировать</a>
